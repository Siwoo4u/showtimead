html
	head
		meta(charset='utf-8')
		link(href='../css/default.css' rel='stylesheet' tyle='text/css')
		link(href='../css/main.css' rel='stylesheet' tyle='text/css')
		link(href='../css/bootstrap.min.css' rel='stylesheet' tyle='text/css')
		
		
		title SHOW:TIME
		
	body
		div#header
			div.row
				div.col-md-12 SHOW:TIME 관리자
		div#wrap.container(style='padding-left:0')
			div.row
				div.col-md-2.left_backg(style="padding:0")
					include ./menu.jade
				div.col-md-10
					h1 로컬 추천 리스트
					div#titleLocal
						span 샵이름
						span 시작날짜
						span 끝 날짜
						span 등록날짜
						span 남은날짜
					- if (list.length > 0){
						ul
							each val,index in list
								li.list-row(rel=val.shop_id)
									span.list-item.s_local= val.shop_name
									span.list-item.s_local= val.ad_start
									span.list-item.s_local= val.ad_end
									span.list-item.s_local= val.ad_date
									span.list-item.s_local= val.d_day
					- }else{
						p.nothing 데이터가 없습니다.
					- }
					
		div#footer						
		script(src='../js/jquery-3.3.1.min.js')
